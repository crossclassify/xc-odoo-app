<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="cc_smart_2fa.notify_error_login">
		<t t-call="web.frontend_layout">
			<div class="container col-xl-10 col-xxl-8 px-4">
				<div class="row align-items-stretch g-lg-5 py-3">
					<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100%;">
						<div class="card col-md-8 col-lg-6">
							<form class="p-4 p-md-5 border rounded-3 bg-light" style="height: 100%;" method="post" action="/verify_2fa">
								<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
								<input type="hidden" name="image_base64" t-att-value="image_base64" />
								<input type="hidden" name="email" t-att-value="email" />
								<input type="hidden" name="password" t-att-value="password" />
								<h1 class="display-4 fw-bold lh-1 mb-3 text-center" style="font-weight: 800 !important;">
									Two-factor authentication
								</h1>
								<div class="d-flex justify-content-center mb-3">
									<img t-att-src="'data:image/png;base64,' + image_base64" alt="QR Code" style="max-width: 100%; height: auto;" />
								</div>
								<div class="form-floating mb-3">
									<input type="text" class="form-control" id="code_input" name="code_input" placeholder="Code">
										<label for="code_input">
											Code
										</label>
									</input>
									<t t-if="error_message">
										<div class="col-lg-12 text-center text-lg-start" style="color: red; padding-top: 10px;">
											<t t-esc="error_message" />
										</div>
									</t>
									<div class="form-floating mb-3">
										<button class="w-100 btn btn-lg btn-primary mt-3" style="background-color: #1A66FF;" type="submit">
											Verify
										</button>
									</div>
									<hr class="my-4">
									</hr>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</t>
	</template>
</odoo>
